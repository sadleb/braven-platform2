{
  "environments": {
    "test": {
      "buildpacks": [
        { "url": "https://github.com/heroku/heroku-buildpack-google-chrome" },
        { "url": "heroku/ruby" }
      ],
      "addons": ["heroku-postgresql:in-dyno"],
      "scripts": {
        "test-setup": "yarn install",
        "test": "bundle exec rspec --tag ~@ci_exclude && yarn test && ./scripts/post_ci_results.sh"
      }
    },
    "review": {
      "buildpacks": [
        { "url": "heroku/ruby" }
      ],
      "scripts": {
        "postdeploy": "DISABLE_DATABASE_ENVIRONMENT_CHECK=1 bundle exec rake db:schema:load db:seed db:production_dummies"
      }
    }
  }
}
