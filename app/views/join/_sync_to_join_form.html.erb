<%= form_with(url: sync_to_join_path, method: "post", local: true) do |form| %>
  <div class="form-group">
    <%= form.label :program_id, "Program ID:" %>
    <%= form.text_field :program_id, autofocus: true, class: "form-control", required: true, placeholder: "a34scx992...", autocomplete: "salesforce-program-id" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email:" %>
    <%= form.email_field :email, class: "form-control", required: true, placeholder: "you@example.com", autocomplete: "email" %>
  </div>


  <div class="actions">
    <%= form.submit "Start Sync to Join Process" %>
  </div>
<% end %>
