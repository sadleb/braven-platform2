<p id="notice"><%= notice %></p>

<h1>Versions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Updated By</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_content_versions.reverse.each do |custom_content_version| %>
      <tr>
        <td><%= custom_content_version.created_at %></td>
        <td><%= custom_content_version.title %></td>
        <td><%= custom_content_version.user.email %></td>
        <td><%= custom_content_version.body %></td>
        <td><%= link_to "#{custom_content_version.id}", [@custom_content, custom_content_version] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
