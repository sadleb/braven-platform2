<% content_for :title, 'Braven Login' if content_for(:title).blank? %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'layouts/accounts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'accounts' %>
<% end %>

<% content_for :content do %>
  <div class="container-fluid px-0">

    <%= render :partial => 'shared/header' %>

    <main>
      <div class="plank plain-md">
        <div class="section-container">
          <section>
          <%= yield %>
          </section>
        </div>
      </div>
    </main>

    <%= render :partial => 'shared/footer' %>

  </div>

<% end %>

<%= render template: "layouts/application" %>
