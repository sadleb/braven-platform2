<%# CSS to arrange radios horizontally %>

<% input_name = "fellow_evaluation[#{user.id}][#{question_name}]" %>
<% input_id_prefix = "radio-#{user.id}-#{question_name}" %>

<fieldset class="capstone-evaluation-question-wrapper">
  <legend class="capstone-evaluation-question">
    <%= question %>
  </legend>

  <div class="container-fluid p-0">
    <div class="capstone-evaluation-radios">
      <% radios.each do |label, value| %>
        <% radio_id = "#{input_id_prefix}-#{value}" %>
          <div class="col-sm pr-0">
            <input id="<%= radio_id %>" type="radio" value="<%= value %>"
               name="<%= input_name %>" required>
            <label for="<%= radio_id %>"><%= label %></label>
          </div>
      <% end %>
    </div>
  </div>
</fieldset>
