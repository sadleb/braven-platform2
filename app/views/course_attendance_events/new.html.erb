<% content_for(:headline) do %>
  Select an attendance event to publish to a Canvas course
<% end %>

<div class="col-md-6">
  <%= form_with(url: publish_course_course_attendance_events_path(@course), local: true) do |form| %>
    <div class="form-group">
      <div class="row">
        <%= form.label :title, class: 'col-sm-3' %>
        <%= form.collection_select :attendance_event_id, @attendance_events, :id, :title, {}, class: 'form-control col-sm-8' %>
      </div>
    </div>
    <input type='submit' value='Add' />
  <% end %>
</div>
